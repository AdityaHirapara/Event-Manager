
<div class="main">
    <div class="form-container">
        <form action="/signup" method="post">
            <h1>SignUp</h1>
            <label for="event">Event Name</label><br>
            <input type="text" name="event" value={{event}}><br><br>
            <label for="name">User Name</label><br>
            <input type="text" name="name" required><br><br>
            <label for="email">Email</label><br>
            <input type="email" name="email" required><br><br>
            <label for="pass">Password</label><br>
            <input type="password" name="pass" required><br><br>
            <label for="mobile">Mobile Number</label><br>
            <input type="text" name="mobile" required><br><br>
            <label for="committee">Committee</label><br>
            <input type="text" name="committee" value="{{committee}}"><br><br>
            <input type="submit" name="submit" value="Signup" style="max-width:90px;font-size: 100%;" class="button">
        </form>
    </div>
</div>